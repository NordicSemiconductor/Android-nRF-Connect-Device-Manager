{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/com.google.devtools.ksp/",
        "/org.jetbrains.kotlin.*/"
      ]
    },
    {
      "matchPackageNames": [
        "no.nordicsemi.android.gradle:version-catalog"
      ],
      "allowedVersions": "/^2\\.11\\..*$/"
    },
    {
      "matchPackageNames": [
        "/com.fasterxml.jackson.*/",
        "/androidx.room/"
      ],
      "enabled": false
    }
  ]
}

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_image_upgrade"
        android:name="io.runtime.mcumgr.sample.fragment.mcumgr.ImageUpgradeFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/fragment_card_image_upgrade"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_image_upload"
        android:name="io.runtime.mcumgr.sample.fragment.mcumgr.ImageUploadFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/fragment_card_image_upload"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_image_control"
        android:name="io.runtime.mcumgr.sample.fragment.mcumgr.ImageControlFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/fragment_card_image_control" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_image_settings"
        android:name="io.runtime.mcumgr.sample.fragment.mcumgr.ImageSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/fragment_card_image_erase_settings"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_reset"
        android:name="io.runtime.mcumgr.sample.fragment.mcumgr.ResetFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:layout="@layout/fragment_card_reset"/>

</LinearLayout>
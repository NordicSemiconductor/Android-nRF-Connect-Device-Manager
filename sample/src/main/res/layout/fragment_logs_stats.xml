<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_mds"
        android:name="no.nordicsemi.android.mcumgr.sample.fragment.mcumgr.ObservabilityFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        tools:layout="@layout/fragment_card_observability"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_stats"
        android:name="no.nordicsemi.android.mcumgr.sample.fragment.mcumgr.StatsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        tools:layout="@layout/fragment_card_stats"/>

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <!-- Primary color of the app. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary color of the app. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondary</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <!-- Surface color. -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceContainer">@color/colorSurfaceContainer</item>
        <!-- Color for displaying error messages.  -->
        <item name="colorError">@color/colorError</item>
    </style>

    <!-- Main theme customization per API. -->
    <style name="AppTheme" parent="AppTheme.Base"/>

    <!-- App Bar overlays. -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light"/>

    <!-- Widgets. -->
    <style name="Widget"/>

    <style name="Widget.ActionButton" parent="Widget.Material3.Button.TextButton">
        <!--
            4 action buttons don't fit on the screen on narrow phones.
            Default width would be 4 * 88 dip = 352. For narrower phones, use narrower buttons.
        -->
        <item name="android:minWidth">56dip</item>
    </style>

</resources>
